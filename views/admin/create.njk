{% extends "admin/layout.njk" %}
<head>
    {% block head %}
        <title>Create</title>
        <link rel="stylesheet" href="/css/admin.css">
    {% endblock %}

       
</head>

{% block content %}
    <form class="card" method="POST" action="/admin/recipes">
        <section class="details">
            <h3 class="title">Creating recipe</h3>
            <button type="submit" class="save">Save recipes</button>
        </section>
        <div class="item"> 
            <p class="image">Image of recipe</p>
            <input type="url" name="img_recipe_url" class="img_recipe_url">
        </div>
         
        <div id="ingredients">
        <p class="header_ingredient">Ingredients</p>
            <div class="item_igredient">
               
                <input type="text"  class="ingredient_text" name="ingredients[]" value="" placeholder="igredient">
            </div> 
        </div>
         
        <button type="button" class="new_igredient">add new ingredient</button>
        
        <div id="preparation_mode">
            <div class="item"> 
                <p  class="preparation">Preparation mode</p>
                <input type="text" name="preration_mode" class="preration_mode">
            </div>
        </div>
        <p type="button" class="new_step">add new step</p>

        <div class="item"> 
            <p  class="dish">Name of dish</p>
            <input type="text" name="title" class="name_title">
        </div>

         <div class="item"> 
            <p  class="author">by</p>
            <input type="text" name="author" class="name_author">
        </div>
        <div class="item"> 
            <p class="aditional">Additional Information</p>
            <textarea name="aditional" id="aditional"  rows="10"></textarea>
        </div>

    </form>
    <script src="/adm.js"></script>
{% endblock content %}
