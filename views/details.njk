{% extends "layout.njk" %}

{% block head %}
    <title>DetailsRecipes</title>
    <link rel="stylesheet" href="/css/recipes.css">
{% endblock %}

{% block content %}
    <section id="details">
                <aside class="{{items.id}}">
                    <img src="{{items.image}}" alt="{{items.title}}" class='card'>
                    <h1>{{items.title}}</h1>
                    <p>{{items.author}}</p>
                    <h2 class="ingredients">Ingredients</h2>
                    <p class='other'>HIDE</p>
                    <ul>
                        <li>{{items.ingredients}}<br><br></li>
                    </ul>
                </aside> 
     </section>
{% endblock %}